{
    "manifest_version": 3,
    "name": "Read Right",
    "version": "1.0",
    "description": "A reading mode extension to help people with ADHD or dyslexia read better.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "declarativeNetRequest"
    ],
    "icons": {
        "16": "icon.png"
      },
    
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["./styles/index.css"]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "options_page": "options.html"
}
